@import "reset.css";

border-hex = 3px solid #777;

html body
	width 100%
	height 100%



#content
	width 98%
	margin 0.5% auto
	background-image url('../images/background_top_lobby.png')
	background-repeat repeat-x
	background-position-y: 35px
	background-color: #f7f7f7;
	//background-color: #ECEBE7

#title 
	float: left
	font-size 1.2em
	margin-left 3%

#title-user
	font-size: 1.4em
	float: left
	margin-top: 60px
	vertical-align text-top
	span
		font-family: 'Gochi Hand', cursive
		margin-top: 20px
		position: absolute
	.picture-face
		width 50px
		height 50px
		padding 8px

section
	height 100%

#nav-section
	color #fff
	width 40%
	font-size 1.1em
	margin-top 62px
	padding .5em
	background #087
	float: right
	display: block
	border-radius: 18px 0px 0px 18px;

#order-by
	float right
	padding-right 10%
	select
		width 12em
		margin-left 12px

#content-section
	padding-top: 11%
	padding-bottom 8%
	width 98%

.hex, .hex-1
	display: inline-block
	padding: 6% 15%
	height 65px

.hex
	padding-top 4%
	margin-left 4%
	padding-bottom 3%
	padding-right 1%

.hex-1
	padding: 6% 10%
	&:first-child
		padding-left 20%

.hex-in-1, .hex-in-2, .hex-in-3
	background #ccc
	border-left border-hex
	border-right border-hex
	width 188px
	height 110px
	float: left
	position: absolute


.hex-in-1
	//background #f00
	-webkit-transform rotate(-60deg)
	-moz-transform rotate(-60deg)

.hex-in-2
	//background #0f0
	-webkit-transform rotate(60deg)
	-moz-transform rotate(60deg)

.hex-in-3
	//background #00f
	-webkit-transform rotate(0deg)
	-moz-transform rotate(0deg)

.hex-in-4
	width 150px
	margin-left 1.5%
	margin-top -1%
	text-align: center
	font-size 1.3em
	color #333
	z-index 5 
	float: left
	position: absolute

.hex-content
	position: absolute
	height: 177px
	width: 194px
	margin-top: -36px
	.image-hex
		height 82%
		width 60%
		margin-left 19%
		margin-top 18%


.hex:hover > .hex-in-1
	background: #d8e
.hex:hover > .hex-in-2
	background #d8e
.hex:hover > .hex-in-3
	background #d8e
.hex:hover > .hex-in-4
	background #d8e
.hex-1:hover > .hex-in-1
	background: #aaf
.hex-1:hover > .hex-in-2
	background #aaf
.hex-1:hover > .hex-in-3
	background #aaf
.hex-1:hover > .hex-in-4
	background #aaf

footer
	position: relative
